{
  "name": "smile-lab-attendance-app",
  "version": "1.0.3",
  "description": "Updates in google sheets service",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:verbose": "jest --verbose",
    "pretest": "node tests/setup/setupTests.js",
    "posttest": "node tests/setup/teardown.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.1.4",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "dropbox": "^10.34.0",
    "dunder-proto": "^1.0.1",
    "get-intrinsic": "^1.3.0",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "has-proto": "^1.2.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!tests/**"
    ]
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "chintan-27",
      "repo": "smile-lab-attendance-app",
      "releaseType": "draft"
    },
    "appId": "edu.uf.smile.attendance",
    "productName": "UF Lab Attendance",
    "files": [
      "**/*",
      "!node_modules/**/{test,__tests__,examples}/**",
      "!**/*.map"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icons",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}